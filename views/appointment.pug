extends layout

block head
  
    link(rel='stylesheet', type='text/css', href='../CSS/appointment.css')
    title Ninja Appointment

block content
  
  //- Appointment Topic
  div.container
    div.row.justify-content-center
      span.appointmentWelcomeSentence 
        | My Appointment

  //- Appointment section 
  div.container-fluid.appointmentSection
    div.personalField
      div.personalFieldTopic 
        | Personal
      div(class="input-group")
        div(class="input-group-prepend halfField")
          span(class="input-group-text" id="basic-addon1") Name
          input(type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1"  value=customer.name readonly)
        div(class="input-group-prepend halfField")

          span(class="input-group-text" id="basic-addon1") Email
          input(type="text" class="form-control" aria-label="Email" aria-describedby="basic-addon1"  value=customer.email readonly)

        div(class="input-group-prepend halfField")
          span(class="input-group-text" id="basic-addon1") Birthday
          input(type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" readonly value=customer.bday)
        div(class="input-group-prepend halfField")
    div.fullAddressField
      div.fullAddressFieldTopic Address
      div(class="input-group")
        div(class="input-group-prepend fullField")
          span(class="input-group-text" id="basic-addon1") Address
          input(type="text" class="form-control fromCanOnOff"  aria-label="Username" aria-describedby="basic-addon1" readonly value=customer.address)
        div(class="input-group-prepend halfField")
          span(class="input-group-text" id="basic-addon1") Distrinct
          input(type="text" class="form-control fromCanOnOff"  aria-label="Username" aria-describedby="basic-addon1" readonly value=customer.district)
        div(class="input-group-prepend halfField")
          span(class="input-group-text" id="basic-addon1") Province
          input(type="text" class="form-control fromCanOnOff"  aria-label="Username" aria-describedby="basic-addon1" readonly value=customer.province)
        div(class="input-group-prepend halfField")
          span(class="input-group-text" id="basic-addon1") Zip code
          input(type="text" class="form-control fromCanOnOff"  aria-label="Username" aria-describedby="basic-addon1" readonly value=customer.zipCode)
        div(class="input-group-prepend halfField")
          span(class="input-group-text" id="basic-addon1") Telephone
          input(type="text" class="form-control fromCanOnOff"  aria-label="Username" aria-describedby="basic-addon1" readonly value=customer.phone)
    div.noticeField
      div.noticeFieldTopic ** Notice **
      div.noticeFieldSentence
        ul
          li Your personal and address details are depend on your account settings.
          li If you want to change something, please edit in the account settings.

    
  //- Button selection
  div.container.buttonFinalSelection
    div.row.justify-content-center
      //- Confirm the appointment, the modal plugin
      button(type="button" class="btn btn-success" id='confirmCartButton' data-toggle="modal" data-target="#exampleModal")
        | Confirm
      div(class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
        div(class="modal-dialog" role="document")
          div(class="modal-content")
            div(class="modal-header")
              h5(class="modal-title" id="exampleModalLabel") Ninja notes
              button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                span(aria-hidden="true") &times;
            div(class="modal-body")
              p Your appointment has been save! 
              p Next , Please select your convenient payment method.
            div(class="modal-footer")
              button(type="button" class="btn btn-secondary" data-dismiss="modal") No
              button(type="button" class="btn btn-primary" id='yesButton') OK
      //- Cancel button
      button(type="button" class="btn btn-danger" id='cancelButton')
        | Cancel

block foot
  
  script(src='../script/appointment.js')
