extends layout

block head
  
    script(src="https://www.paypalobjects.com/api/checkout.js")
    link(rel='stylesheet', type='text/css', href='../CSS/payment.css')
    title Ninja Payment

block content
  
  //- Payment Topic
  div.paymentTopicContainer
    div.row.justify-content-center
      span.paymentWelcomeSentence 
        | My Payment
            
  div.container-fluid
    div.row
      //- Payment selection part 
      div.paymentLogo
        div.paymentLogoSentence
          p Step 1 : Select your payment method.
        div.row.justify-content-center.paymentLogoImage
          img.scbWay(src="/pictures/scb-logo.png" )
          img.kbankWay(src="/pictures/kbank-logo.png" )
          div(id="paypal-button")

      div.paymentField
        div.paymentFieldStep2
          div.paymentFieldInputSentence
            p Step 2 : Follow the instruction.
          div.paymentFieldInput
        div.paymentFieldStep3
          div.paymentFieldUploadSentence
            p Step 3 : Upload your evidence or slip.
          div.paymentFieldUpload
    
  //- Button selection
  div.buttonFinalSelection
    div.row.justify-content-center
      //- Confirm the payment, the modal plugin
      button(type="button" class="btn btn-success" id='confirmCartButton' data-toggle="modal" data-target="#exampleModal")
        | Confirm
      div(class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
        div(class="modal-dialog" role="document")
          div(class="modal-content")
            div(class="modal-header")
              h5(class="modal-title" id="exampleModalLabel") Ninja notes
              button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                span(aria-hidden="true") &times;
            div(class="modal-body")
              p Your payment has been save! 
              p Next , it is the summary of this transaction.
            div(class="modal-footer")
              button(type="button" class="btn btn-secondary" data-dismiss="modal") No
              button(type="button" class="btn btn-primary" id="yesButton") OK
      //- Cancel button
      button(type="button" class="btn btn-danger" id='cancelButton')
        | Cancel

block foot
  
  script(src='../script/payment.js')
